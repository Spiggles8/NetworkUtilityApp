<Window x:Class="NetworkUtilityApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:NetworkUtilityApp.Views"
        Title="Network Utility" Height="600" Width="1000">
    <DockPanel>
        <TabControl x:Name="MainTabControl" DockPanel.Dock="Top">
            <TabItem Header="Adapters" Name="adapters" Tag="adapters">
                <views:AdaptersView />
            </TabItem>
            <TabItem Header="Diagnostics" Name="diagnostics" Tag="diagnostics">
                <views:DiagnosticsView />
            </TabItem>
            <TabItem Header="Discovery" Name="discovery" Tag="discovery">
                <views:DiscoveryView />
            </TabItem>
            <TabItem Header="Settings" Name="settings" Tag="settings">
                <views:SettingsView />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
